<%- include partials/header %>

    <h1>Register</h1>
    
    <form action="/register" method="POST" class="ui form">
        <div class="field">
            <label>Email</label>
            <input type="text" name="username" placeholder="Email"> 
        </div>
        <div class="field">
            <label>API Key
                <i class="question icon tooltip">
                    <span class="tooltiptext">Log in to your WaniKani account and go to the Settings page. Then, under the Account tab, if you scroll down, you'll need to copy the API-Version-1 Key exactly as displayed.</span>
                </i>
            </label>
            <input type="text" name="apiKey" placeholder="API Key">
        </div>
        <div class="field">
            <label>Phone Number</label>
            <!-- what are the parameters here? what country/etc. -->
            <input type="tel" name="phoneNumber" placeholder="Phone Number">
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password">
        </div>
        <button class="ui button" type="submit">Register</button>
    </form>

<%- include partials/footer %>